[Unit]
Description=RadAPI

[Service]
WorkingDirectory=/home/pi/radapi/
ExecStart=/usr/local/bin/node --max_old_space_size=256 /home/pi/radapi/index.js
Restart=always
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=radapi
User=pi
Group=pi
Environment=NODE_ENV=production PORT=1880

[Install]
WantedBy=multi-user.target
